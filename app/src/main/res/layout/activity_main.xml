<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <me.ryzenfromfire.chesslin.SquareImageView
      android:id="@+id/boardImageView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="24dp"
      android:layout_marginBottom="24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/chessboard" />

  <androidx.gridlayout.widget.GridLayout
      android:id="@+id/boardGridLayout"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:columnCount="8"
      app:layout_constraintBottom_toBottomOf="@+id/boardImageView"
      app:layout_constraintEnd_toEndOf="@+id/boardImageView"
      app:layout_constraintStart_toStartOf="@+id/boardImageView"
      app:layout_constraintTop_toTopOf="@+id/boardImageView"
      app:rowCount="8">

  </androidx.gridlayout.widget.GridLayout>

  <EditText
    android:id="@+id/moveEditText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:autofillHints="e4"
    android:ems="10"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.25"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="LabelFor" />

  <TextView
    android:id="@+id/turnTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="16dp"
    android:text="@string/turn_white"
    android:textSize="25sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/moveSubmitButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:text="Move"
    app:layout_constraintBottom_toBottomOf="@+id/moveEditText"
    app:layout_constraintStart_toEndOf="@+id/moveEditText"
    app:layout_constraintTop_toTopOf="@+id/moveEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>